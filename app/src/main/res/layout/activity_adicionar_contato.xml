<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neon_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR CONTATO"
            android:textColor="@color/neon_cyan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textColor="@color/neon_green"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Digite o nome"
            android:textColorHint="@color/neon_green"
            android:textColor="@color/white"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_neon"
            android:padding="15dp"
            android:layout_marginBottom="20dp"/>

        <!-- Telefone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone:"
            android:textColor="@color/neon_green"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/etTelefone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="(xx) xxxxx-xxxx"
            android:textColorHint="@color/neon_green"
            android:textColor="@color/white"
            android:inputType="phone"
            android:background="@drawable/edit_text_neon"
            android:padding="15dp"
            android:layout_marginBottom="20dp"/>

        <!-- Switch NÃºmero Oculto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ocultar nÃºmero na lista:"
                android:textColor="@color/neon_pink"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/switchNumeroOculto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- SeÃ§Ã£o MÃ­dia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MÃDIA DO CONTATO"
            android:textColor="@color/neon_yellow"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- BotÃµes MÃ­dia -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnTirarFoto"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ðŸ“¸ FOTO"
                android:textColor="@color/neon_black"
                android:textStyle="bold"
                android:background="@drawable/button_neon_cyan"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/btnGravarVideo"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="ðŸŽ¥ VÃDEO"
                android:textColor="@color/neon_black"
                android:textStyle="bold"
                android:background="@drawable/button_neon_pink"/>

        </LinearLayout>

        <!-- Preview da Foto -->
        <ImageView
            android:id="@+id/imgFotoPreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/item_contato_background"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <!-- Info do VÃ­deo -->
        <TextView
            android:id="@+id/tvVideoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhum vÃ­deo gravado"
            android:textColor="@color/neon_green"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="30dp"/>

        <!-- BotÃ£o Salvar -->
        <Button
            android:id="@+id/btnSalvarContato"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ðŸ’¾ SALVAR CONTATO"
            android:textColor="@color/neon_black"
            android:textStyle="bold"
            android:background="@drawable/button_neon_green"
            android:layout_marginBottom="15dp"/>

        <!-- BotÃ£o Voltar -->
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="â¬…ï¸ VOLTAR"
            android:textColor="@color/neon_black"
            android:textStyle="bold"
            android:background="@drawable/button_neon_pink"/>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/neon_black"
    android:gravity="center"
    android:padding="20dp">

    <!-- Logo/Imagem do Cofre -->
    <ImageView
        android:id="@+id/imgCofre"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cofre"
        android:contentDescription="Cofre Seguro"
        android:layout_marginBottom="30dp"/>

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGENDA SEGURA"
        android:textColor="@color/neon_cyan"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>

    <!-- Campo Senha -->
    <EditText
        android:id="@+id/etSenha"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Digite sua senha"
        android:textColorHint="@color/neon_green"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_neon"
        android:padding="15dp"
        android:layout_marginBottom="20dp"/>

    <!-- Botão Entrar -->
    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="ENTRAR"
        android:textColor="@color/neon_black"
        android:textStyle="bold"
        android:background="@drawable/button_neon_cyan"
        android:layout_marginBottom="15dp"/>

    <!-- Botão Recuperar Senha -->
    <Button
        android:id="@+id/btnRecuperarSenha"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="ESQUECI MINHA SENHA"
        android:textColor="@color/neon_black"
        android:textStyle="bold"
        android:background="@drawable/button_neon_pink"
        android:layout_marginBottom="15dp"/>

    <!-- Botão Cadastrar -->
    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="PRIMEIRO ACESSO"
        android:textColor="@color/neon_black"
        android:textStyle="bold"
        android:background="@drawable/button_neon_green"
        android:layout_marginBottom="30dp"/>

    <!-- Rodapé -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2025 - Desenvolvido por Fabricio"
        android:textColor="@color/neon_yellow"
        android:textSize="12sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
